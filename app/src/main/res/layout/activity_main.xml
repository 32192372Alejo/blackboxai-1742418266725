<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/black">
    </FrameLayout>

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¿Por qué quieres trabajar aquí?"
        android:textSize="20sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="24dp"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/responseEditText"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Escribe tu respuesta aquí"
        android:textColorHint="@color/text_secondary"
        android:textColor="@color/text_primary"
        android:gravity="top"
        android:padding="12dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/videoResponseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GRABAR"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary"
        android:layout_marginBottom="12dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/textResponseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESPONDER EN TEXTO"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary"
        android:layout_marginBottom="12dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTINUAR"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary"
        android:padding="16dp"/>

</LinearLayout>