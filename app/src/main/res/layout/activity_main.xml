<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Por qué quieres trabajar aquí?"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="32dp"
        android:gravity="center"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/responseEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribe tu respuesta aquí"
        android:minHeight="100dp"
        android:gravity="top"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/textResponseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESPONDER EN TEXTO"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/videoResponseButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESPONDER EN VIDEO"
        android:layout_marginBottom="16dp"
        android:padding="16dp"/>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTINUAR"
        android:padding="16dp"/>

</LinearLayout>